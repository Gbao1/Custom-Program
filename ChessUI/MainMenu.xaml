<UserControl x:Class="ChessUI.MainMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Width="600" Height="600">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Chess Game" FontSize="24" Margin="0,0,0,20"/>
            <Button x:Name="btnNewGame" Content="New Game" Margin="0,0,0,10"/>
            <Button x:Name="btnLoadGame" Content="Load Game" Margin="0,0,0,10"/>
            <Button x:Name="btnQuitGame" Content="Quit Game" Margin="0,0,0,10"/>
        </StackPanel>
    </Grid>
</UserControl>