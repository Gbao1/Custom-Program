<UserControl x:Class="ChessUI.MainMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Width="600" 
          Height="600">
        <Grid.Background>
            <ImageBrush ImageSource="Images/Board.png"/>
        </Grid.Background>
        
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Border Style="{StaticResource BorderStyle}">
               <TextBlock Text="Chess Game" 
                       FontSize="60" 
                       Margin="10,10,10,10"
                       Style="{StaticResource TextStyle}"/> 
            </Border>
            
            <Button x:Name="btnNewGame" 
                    Content="New Game" 
                    Margin="30,90,30,10"
                    Style="{StaticResource ButtonStyle}"
                    FontSize="32"/>
            
            <Button x:Name="btnLoadGame" 
                    Content="Load Game" 
                    Margin="30,10,30,10"
                    Style="{StaticResource ButtonStyle}"
                    FontSize="32"/>
            
            <Button x:Name="btnQuitGame" 
                    Content="Quit Game" 
                    Margin="30,10,30,10"
                    Style="{StaticResource ButtonStyle}"
                    FontSize="32"/>
        </StackPanel>
    </Grid>
</UserControl>